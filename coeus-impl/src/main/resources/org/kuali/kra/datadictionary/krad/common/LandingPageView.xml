<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="Kc-LandingPage-DefaultView" parent="Kc-LandingPage-DefaultView-parentBean"/>
    <bean id="Kc-LandingPage-DefaultView-parentBean" abstract="true" parent="Uif-FormView"
          p:headerText="Kuali Coeus 6.0" p:formClass="org.kuali.kra.web.krad.LandingPageForm">
        <property name="unifiedHeader" value="false"/>
        <property name="defaultBindingObjectPath" value=""/>
        <property name="singlePageView" value="true"/>
        <property name="page">
            <bean parent="Kc-LandingPage-DefaultPage"/>
        </property>
    </bean>

    <bean id="Kc-LandingPage-DefaultPage" parent="Kc-LandingPage-DefaultPage-parentBean"/>
    <bean id="Kc-LandingPage-DefaultPage-parentBean" abstract="true" parent="Uif-Page">
        <property name="items">
            <list>
                <bean parent="Kc-LandingPage-UhGrid"/>
            </list>
        </property>
    </bean>

    <bean id="Kc-LandingPage-UhGrid" parent="Kc-LandingPage-UhGrid-parentBean"/>
    <bean id="Kc-LandingPage-UhGrid-parentBean" abstract="true" parent="Uif-CssGridGroup">
        <property name="items">
            <list>
                <bean parent="Uif-Space" p:colSpan="2" />
                <bean parent="Uif-PrimaryActionButton" p:colSpan="4"
                      p:actionLabel="Create Proposal"
                      p:actionImagePlacement="TOP">
                    <property name="actionImage">
                        <bean parent="Uif-Image" p:source="@{#ConfigProperties['krad.externalizable.images.url']}create_proposal.png"/>
                    </property>
                    <property name="actionUrl">
                        <bean parent="Uif-Url"
                            p:baseUrl="@{#ConfigProperties['application.url']}/kc-pd-krad"
                            p:viewId="PropDev-InitiateView"
                            p:controllerMapping="/proposalDevelopment"
                            p:methodToCall="docHandler"
                            p:requestParameters="command:initiate"/>
                    </property>
                </bean>
                <bean parent="Uif-PrimaryActionButton" p:colSpan="4"
                      p:actionLabel="My Proposals"
                      p:actionImagePlacement="TOP">
                    <property name="actionUrl">
                        <bean parent="Uif-Url"
                              p:baseUrl="@{#ConfigProperties['application.url']}/kr-krad"
                              p:viewId="AllDevelopmentProposals-LookupViewId"
                              p:methodToCall="search"
                              p:requestParameters="lookupCriteria[initiator]:@{#userSession == null ? '' : #userSession.getPerson().getPrincipalName()},viewName:AllLookupableDevelopmentProposals-LookupViewName"
                              p:controllerMapping="/lookup" />
                    </property>
                    <property name="actionImage">
                        <bean parent="Uif-Image" p:source="@{#ConfigProperties['krad.externalizable.images.url']}find.png"/>
                    </property>
                </bean>
                <bean parent="Uif-Space" p:colSpan="2"/>
            </list>
        </property>
    </bean>

    <bean id="Kc-LandingPage-RedirectView" parent="Kc-LandingPage-RedirectView-parentBean"/>
    <bean id="Kc-LandingPage-RedirectView-parentBean" abstract="true" parent="Uif-FormView"
          p:formClass="org.kuali.kra.web.krad.LandingPageForm">
        <property name="unifiedHeader" value="false"/>
        <property name="singlePageView" value="true"/>
        <property name="applicationHeader">
            <null/>
        </property>
        <property name="breadcrumbs.render" value="false"/>
        <property name="onDocumentReadyScript" value="if(window.self !== window.top) {
            window.parent.postMessage('redirect:@{#ConfigProperties['application.url']}', '*');
         } else {
            window.location.replace('@{#ConfigProperties['application.url']}');
         }"/>
    </bean>
</beans>
