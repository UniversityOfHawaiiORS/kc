<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="Kc-LandingPage-DefaultView" parent="Kc-LandingPage-DefaultView-parentBean"/>
    <bean id="Kc-LandingPage-DefaultView-parentBean" abstract="true" parent="Uif-FormView"
          p:formClass="org.kuali.kra.web.krad.LandingPageForm"
          p:additionalCssFiles="css/uh.css">
        <property name="unifiedHeader" value="false"/>
        <property name="defaultBindingObjectPath" value=""/>
        <property name="singlePageView" value="true"/>
        <property name="page">
            <bean parent="Kc-LandingPage-DefaultPage"/>
        </property>
    </bean>

    <bean id="Kc-LandingPage-DefaultPage" parent="Kc-LandingPage-DefaultPage-parentBean"/>
    <bean id="Kc-LandingPage-DefaultPage-parentBean" abstract="true" parent="Uif-Page">
        <property name="items">
            <list>
                <bean parent="Kc-LandingPage-UhGrid"/>
            </list>
        </property>
    </bean>

    <bean id="Kc-LandingPage-UhGrid" parent="Kc-LandingPage-UhGrid-parentBean"/>
    <bean id="Kc-LandingPage-UhGrid-parentBean" abstract="true" parent="Uif-CssGridGroup">
        <property name="items">
            <list>
                <bean parent="Uif-MessageField" p:messageText="Get started" p:colSpan="12" p:additionalCssClasses="uh_help_section_header"/>
                <bean parent="Uif-PrimaryActionButton" p:colSpan="4"
                    p:actionLabel="Create Proposal"
                    p:actionIconPlacement="TOP"
                    p:iconClass="icon-pencil"
                    p:additionalCssClasses="btn-success uh_help_button">
                    <property name="actionUrl">
                        <bean parent="Uif-Url"
                            p:baseUrl="@{#ConfigProperties['application.url']}/kc-pd-krad"
                            p:viewId="PropDev-InitiateView"
                            p:controllerMapping="/proposalDevelopment"
                            p:methodToCall="docHandler"
                            p:requestParameters="command:initiate"/>
                    </property>

                </bean>
                <bean parent="Uif-PrimaryActionButton" p:colSpan="4"
                    p:actionLabel="Find My Proposals"
                    p:actionIconPlacement="TOP"
                    p:iconClass="icon-search"
                    p:additionalCssClasses="btn-success uh_help_button">
                    <property name="actionUrl">
                        <bean parent="Uif-Url"
                              p:baseUrl="@{#ConfigProperties['application.url']}/kr-krad"
                              p:viewId="AllDevelopmentProposals-LookupViewId"
                              p:methodToCall="search"
                              p:requestParameters="lookupCriteria[initiator]:@{#userSession == null ? '' : #userSession.getPerson().getPrincipalName()},viewName:AllLookupableDevelopmentProposals-LookupViewName"
                              p:controllerMapping="/lookup" />
                    </property>
                </bean>
                <bean parent="Uif-PrimaryActionButton" p:colSpan="4"
                      p:actionLabel="User Guides"
                      p:actionIconPlacement="TOP"
                      p:iconClass="icon-drawer2"
                      p:additionalCssClasses="btn-success uh_help_button"
                      p:actionScript="window.open('@{#getParam('KC-GEN','All','uh.helpbutton.user.guides.url')}');">
                </bean>



                <bean parent="Uif-MessageField" p:messageText="Get help" p:colSpan="12" p:additionalCssClasses="uh_help_section_header"/>
                <bean parent="Uif-PrimaryActionButton" p:colSpan="4"
                      p:actionLabel="ORS Helpline"
                      p:actionIconPlacement="TOP"
                      p:iconClass="icon-question-sign"
                      p:additionalCssClasses="btn-warning uh_help_button"
                      p:actionScript="window.open('@{#getParam('KC-GEN','All','uh.helpbutton.helpline.request.url')}');">
                </bean>
                <bean parent="Uif-PrimaryActionButton" p:colSpan="4"
                      p:actionLabel="Add a sponsor"
                      p:actionIconPlacement="TOP"
                      p:iconClass="icon-address-book"
                      p:additionalCssClasses="btn-warning uh_help_button"
                      p:actionScript="window.open('@{#getParam('KC-GEN','All','uh.helpbutton.add.sponsor.url')}');">
                </bean>
                <bean parent="Uif-PrimaryActionButton" p:colSpan="4"
                    p:actionLabel="Add a performance site"
                    p:actionIconPlacement="TOP"
                    p:iconClass="icon-home"
                    p:additionalCssClasses="btn-warning uh_help_button"
                    p:actionScript="window.open('@{#getParam('KC-GEN','All','uh.helpbutton.add.performance.site.url')}');">
                </bean>




                <bean parent="Uif-MessageField" p:messageText="Get information" p:colSpan="12" p:additionalCssClasses="uh_help_section_header"/>
                <bean parent="Uif-PrimaryActionButton" p:colSpan="4"
                      p:actionLabel="Workflow routing"
                      p:actionIconPlacement="TOP"
                      p:iconClass="icon-shuffle"
                      p:additionalCssClasses="btn-primary uh_help_button"
                      p:actionScript="window.open('@{#getParam('KC-GEN','All','uh.helpbutton.routing.url')}');">
                </bean>
                <bean parent="Uif-PrimaryActionButton" p:colSpan="4"
                      p:actionLabel="Delegations"
                      p:actionIconPlacement="TOP"
                      p:iconClass="icon-profile"
                      p:additionalCssClasses="btn-primary uh_help_button"
                      p:actionScript="window.open('@{#getParam('KC-GEN','All','uh.helpbutton.delegation.url')}');">
                </bean>
                <bean parent="Uif-PrimaryActionButton" p:colSpan="4"
                      p:actionLabel="Award Status"
                      p:actionIconPlacement="TOP"
                      p:iconClass="icon-clock"
                      p:additionalCssClasses="btn-primary uh_help_button"
                      p:actionScript="window.open('@{#getParam('KC-GEN','All','uh.helpbutton.award.status.url')}');">
                </bean>
            </list>
        </property>
    </bean>

    <bean id="Kc-LandingPage-RedirectView" parent="Kc-LandingPage-RedirectView-parentBean"/>
    <bean id="Kc-LandingPage-RedirectView-parentBean" abstract="true" parent="Uif-FormView"
          p:formClass="org.kuali.kra.web.krad.LandingPageForm">
        <property name="unifiedHeader" value="false"/>
        <property name="singlePageView" value="true"/>
        <property name="applicationHeader">
            <null/>
        </property>
        <property name="breadcrumbs.render" value="false"/>
        <property name="onDocumentReadyScript" value="if(window.self !== window.top) {
            window.parent.postMessage('redirect:@{#ConfigProperties['application.url']}', '*');
         } else {
            window.location.replace('@{#ConfigProperties['application.url']}');
         }"/>
    </bean>
</beans>
