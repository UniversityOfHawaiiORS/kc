
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

<!-- KC-530 Lookup screens are too difficult for users, make searches easier by implementing search engine  -->
<!-- KC-959 Improve search for Performance Site, Unit and Sponsor using SOLR (Fix for KC 6.0  KRAD changes) -->
<bean id="Sponsor" parent="Sponsor-parentBean">
         <property name="attributes">
			<list merge="true">
				<ref bean="Sponsor-sponsorSearchInput" />
			</list>
		</property>  
</bean>

<bean id="Sponsor-sponsorSearchInput" parent="Sponsor-sponsorSearchInput-parentBean" />

  <bean id="Sponsor-sponsorSearchInput-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="sponsorSearchInput" />
    <property name="forceUppercase" value="false" />
    <property name="label" value="Sponsor Search" />
    <property name="shortLabel" value="Sponsor Search" />
    <property name="maxLength" value="200" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern"
            p:allowWhitespace="true" />
    </property>
    <property name="control" >
      <bean parent="TextareaControlDefinition"
            p:rows="5"
            p:cols="40" />
    </property>
    <property name="controlField">
        <bean p:size="40" parent="Uif-TextControl"/>
    </property>
    <property name="summary" value="Sponsor Search" />
    <property name="description" value="SponsorSearchInput Data to be sent to solr." />
  </bean>
  
    <bean id="Sponsor-lookupDefinition" parent="Sponsor-lookupDefinition-parentBean">
       <property name="lookupFields" >
          <list>
            <bean parent="FieldDefinition"
                  p:attributeName="sponsorSearchInput"/>
          </list>
        </property>
    </bean>

    <bean id="Sponsor-LookupView" parent="Sponsor-LookupView-parentBean">
    <property name="viewHelperService" value="#{#getService('uhSponsorLookupable')}"/>
    <property name="headerText" value="Sponsor Lookup"/>
    <property name="criteriaFields">
        <list>
            <bean p:propertyName="sponsorSearchInput" parent="Uif-LookupCriteriaInputField">
                <!-- KC-1127 If a blank SOLR search is executed, the system returns a STE -->
                <property name="required" value="true"/>
                <!-- KC-1127 END -->
            </bean>
        </list>
    </property>
</bean>
        
</beans>
