<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="UhAwardExtension" parent="BusinessObjectEntry">
		<property name="businessObjectClass" value="edu.hawaii.award.bo.UhAwardExtension" />
		<property name="objectLabel" value="UhAwardExtension" />

		<property name="attributes">
			<list>
				<ref bean="UhAwardExtension-awardId" />
				<ref bean="UhAwardExtension-signedDate" />
				<ref bean="UhAwardExtension-assignedDate" />
				<ref bean="UhAwardExtension-completedDate" />
				<ref bean="UhAwardExtension-sponsorIssuedDate" />
				<ref bean="UhAwardExtension-assignedToPersonId" />
			</list>
		</property>
	</bean>

	<!-- Attribute Definitions -->
	<bean id="UhAwardExtension-awardId" parent="Award-awardId" />

	<bean id="UhAwardExtension-signedDate" parent="AttributeDefinition">
		<property name="name" value="signedDate" />
		<property name="label" value="Date UH Signed" />
		<property name="shortLabel" value="Date UH Signed" />
		<property name="required" value="false" />
		<property name="control">
			<bean p:datePicker="true" p:size="10" parent="TextControlDefinition" />
		</property>
		<property name="maxLength" value="20" />
	</bean>

	<bean id="UhAwardExtension-assignedDate" parent="AttributeDefinition">
		<property name="name" value="assignedDate" />
		<property name="label" value="Date Assigned" />
		<property name="shortLabel" value="Date Assigned" />
		<property name="required" value="false" />
		<property name="control">
			<bean p:datePicker="true" p:size="10" parent="TextControlDefinition" />
		</property>
		<property name="maxLength" value="20" />
	</bean>

	<bean id="UhAwardExtension-completedDate" parent="AttributeDefinition">
		<property name="name" value="completedDate" />
		<property name="label" value="Date Completed" />
		<property name="shortLabel" value="Date Completed" />
		<property name="required" value="false" />
		<property name="control">
			<bean p:datePicker="true" p:size="10" parent="TextControlDefinition" />
		</property>
		<property name="maxLength" value="20" />
	</bean>

	<bean id="UhAwardExtension-sponsorIssuedDate" parent="AttributeDefinition">
		<property name="name" value="sponsorIssuedDate" />
		<property name="label" value="Sponsor Issued Date" />
		<property name="shortLabel" value="Sponsor Issued Date" />
		<property name="required" value="true" />
		<property name="control">
			<bean p:datePicker="true" p:size="10" parent="TextControlDefinition" />
		</property>
		<property name="maxLength" value="20" />
	</bean>

	<bean id="UhAwardExtension-assignedToPersonId" parent="PersonImpl-principalId">
		<property name="name" value="assignedToPersonId" />
		<property name="label" value="Assigned To" />
		<property name="shortLabel" value="Assigned To" />
		<property name="required" value="false" />
		<property name="control">
			<bean parent="HiddenControlDefinition" />
		</property>
		<property name="displayLabelAttribute" value="assignedToPerson.fullName" />
	</bean>
</beans>
