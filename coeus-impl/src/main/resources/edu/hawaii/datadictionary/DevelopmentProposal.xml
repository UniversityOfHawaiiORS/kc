<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!-- UH KC-466 make Sponsor Deadline Date and Sponsor Deadline Type fields required on save -->
	<bean id="DevelopmentProposal-deadlineDate" parent="DevelopmentProposal-deadlineDate-parentBean" >
		<property name="required" value="true" />
	</bean>
	<bean id="DevelopmentProposal-deadlineType" parent="DevelopmentProposal-deadlineType-parentBean" >
		<property name="required" value="true" />
	</bean>
	
	<!-- KC-598 - Can no longer search for proposal by person full name -->
	<bean id="DevelopmentProposal" parent="DevelopmentProposal-parentBean">
		<property name="attributes">
		<list merge="true">
			<ref bean="DevelopmentProposal-proposalPersons.fullName" />	
		</list>
		</property>
	</bean>	
	
	<bean id="DevelopmentProposal-proposalPersons.fullName" parent="DevelopmentProposal-proposalPersons.fullName-parentBean" />
	<bean id="DevelopmentProposal-proposalPersons.fullName-parentBean" abstract="true" parent="AttributeDefinition" >
		<property name="name" value="proposalPersons.fullName" />
		<property name="forceUppercase" value="false" />
		<property name="label" value="Proposal Person Full Name" />
		<property name="shortLabel" value="Proposal Person" />
		<property name="maxLength" value="60" />
		<property name="validationPattern" >
      		<bean p:allowWhitespace="true" parent="AnyCharacterValidationPattern" />
		</property>
		<property name="control" >
			<bean p:size="30" parent="TextControlDefinition" />
		</property>
		<property name="summary" value="Proposal Person" />
		<property name="description" value="Proposal Person" />
	</bean>
	
	<bean id="DevelopmentProposal-lookupDefinition" parent="DevelopmentProposal-lookupDefinition-parentBean" >
		<property name="lookupFields">
		<list merge="true">
			<bean parent="FieldDefinition" p:attributeName="proposalPersons.fullName" />
		</list>
		</property>
	</bean>
	<!--  KC-598 -->
	
	<!-- KC-605 BEGIN - rbl need to increase the text input size by one to allow input sponsor deadline time in the following 24HR format: 23:05 p.m. azost -->
	<!-- the periods will be removed prior to insertion in the database so overall length will still fall w/in range excepted by the database field length of 15 -->
	<bean id="DevelopmentProposal-deadlineTime" parent="DevelopmentProposal-deadlineTime-parentBean">
	 <property name="maxLength" value="16" />
		<property name="control">
			<bean parent="TextControlDefinition" p:size="16" />
		</property>
	</bean>
	<!-- KC-605 END -->
	<!-- KC-792 S2S Opportunity Id validation pattern is incorrect -->
	<bean id="DevelopmentProposal-opportunityIdForGG" parent="DevelopmentProposal-opportunityIdForGG-parentBean">
		<property name="validationPattern">
			<bean parent="AnyCharacterValidationPattern" />
		</property>
	</bean>
	<!-- KC-792 END -->
</beans>

