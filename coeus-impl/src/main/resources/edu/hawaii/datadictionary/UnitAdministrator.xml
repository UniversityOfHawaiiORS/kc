<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="UnitAdministrator" parent="UnitAdministrator-parentBean">
    <property name="attributes" >
	    <list merge="true">
            <ref bean="UnitAdministrator-fromDate"/>
            <ref bean="UnitAdministrator-toDate"/>      
        </list>
    </property>
  </bean>

  <!-- Attribute Definitions -->
  <bean id="UnitAdministrator-fromDate" parent="AttributeDefinition">
    <property name="name" value="fromDate"/>
    <property name="label" value="Active From Date"/>
    <property name="shortLabel" value="Active From Dt"/>
    <property name="required" value="false"/>
    <property name="control">
			<bean p:datePicker="true" p:size="10" parent="TextControlDefinition" />
	</property>
    <property name="summary" value="Start Date"/>
    <property name="description" value="Start Date"/>
  </bean>

  <bean id="UnitAdministrator-toDate" parent="AttributeDefinition">
    <property name="name" value="toDate"/>
    <property name="label" value="Active To Date"/>
    <property name="shortLabel" value="Active To Dt"/>
    <property name="required" value="false"/>
    <property name="control">
			<bean p:datePicker="true" p:size="10" parent="TextControlDefinition" />
	</property>
    <property name="summary" value="End Date"/>
    <property name="description" value="End Date"/>
  </bean>  

  <bean id="UnitAdministrator-inquiryDefinition" parent="UnitAdministrator-inquiryDefinition-parentBean">
    <property name="inquirySections" >
      <list merge="true">
        <bean parent="InquirySectionDefinition">
          <property name="inquiryFields" >
            <list merge = "true">
        		<bean parent="FieldDefinition"
              		p:attributeName="fromDate"
              		p:forceInquiry="true" />
        		<bean parent="FieldDefinition"
              		p:attributeName="toDate"
              		p:forceInquiry="true" />
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>


  <bean id="UnitAdministrator-lookupDefinition" parent="UnitAdministrator-lookupDefinition-parentBean">
    <property name="resultFields" >
      <list merge="true">
        <bean parent="FieldDefinition"
              p:attributeName="fromDate"
              p:forceInquiry="true" />
        <bean parent="FieldDefinition"
              p:attributeName="toDate"
              p:forceInquiry="true" />
      </list>
    </property>
  </bean>
</beans>
