<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!-- KC-367 -->
	<bean id="InstitutionalProposalAdvancedSearch" parent="InstitutionalProposal">
		<property name="businessObjectClass" value="edu.hawaii.institutionalproposal.home.InstitutionalProposalAdvancedSearch" />
		<property name="lookupDefinition">
			<ref bean="InstitutionalProposalAdvancedSearch-lookupDefinition" />
		</property>
	</bean>

	<bean id="InstitutionalProposal-sequenceNumber" parent="InstitutionalProposal-sequenceNumber-parentBean" >
		<property name="name" value="sequenceNumber" />
		<property name="label" value="Version Number" />
		<property name="shortLabel" value="Version Number" />
		<property name="summary" value="Version Number" />
		<property name="description" value="Version Number" />
	</bean>

	<!-- Business Object Lookup Definition -->
	<bean id="InstitutionalProposalAdvancedSearch-lookupDefinition" parent="InstitutionalProposal-lookupDefinition">
		<property name="title" value="Advanced Institutional Proposal Lookup" />
		<property name="lookupableID" value="institutionalProposalAdvancedSearchLookupable" />
		<property name="lookupFields" >
			<list>
				<bean parent="FieldDefinition"
					p:attributeName="proposalNumber" />
				<bean parent="FieldDefinition"
					p:attributeName="sequenceNumber" />
				<bean parent="FieldDefinition" 
					p:attributeName="proposalTypeCode" />
				<bean parent="FieldDefinition" 
					p:attributeName="statusCode" />
				<bean parent="FieldDefinition" 
					p:attributeName="currentAccountNumber" />
				<bean parent="FieldDefinition"
					p:attributeName="title" />
				<bean parent="FieldDefinition" p:useShortLabel="true"
					p:attributeName="lookupUnit.unitNumber" />
				<bean parent="FieldDefinition" p:noLookup="true" p:noDirectInquiry="true" p:useShortLabel="true"
					p:attributeName="lookupUnit.unitName" />
				<!-- 
				<bean parent="FieldDefinition" p:useShortLabel="true"
					p:attributeName="leadUnit.unitNumber" />
				<bean parent="FieldDefinition" p:noLookup="true" p:noDirectInquiry="true" p:useShortLabel="true"
					p:attributeName="leadUnit.unitName" />
				-->
				<bean parent="FieldDefinition" p:useShortLabel="true"
					p:attributeName="projectPersons.fullName" />
				<bean parent="FieldDefinition"
					p:attributeName="projectPersons.institutionalProposalContactId" p:hidden="true" />
				<bean parent="FieldDefinition" 
					p:attributeName="sponsorCode" />
				<bean parent="FieldDefinition" p:noLookup="true" p:noDirectInquiry="true"
					p:attributeName="sponsor.sponsorName" />
			</list>
		</property>
		<property name="resultFields" >
			<list>
				<bean parent="FieldDefinition" 
					p:attributeName="proposalNumber" />
				<bean parent="FieldDefinition" 
					p:attributeName="sequenceNumber" />
				<bean parent="FieldDefinition" p:forceInquiry="true" 
					p:attributeName="proposalType.description" />
				<bean parent="FieldDefinition" p:forceInquiry="true" 
					p:attributeName="activityType.description" />
				<bean parent="FieldDefinition" p:forceInquiry="true" 
					p:attributeName="proposalStatus.description" />
				<bean parent="FieldDefinition" p:forceInquiry="true" 
					p:attributeName="leadUnit.unitNumber" />
				<bean parent="FieldDefinition" 
					p:attributeName="leadUnit.unitName" />
				<bean parent="FieldDefinition" p:forceInquiry="true" 
					p:attributeName="currentAccountNumber" />
				<bean parent="FieldDefinition" 
					p:attributeName="title" />
				<bean parent="FieldDefinition" p:forceInquiry="true" 
					p:attributeName="sponsorCode" />
				<bean parent="FieldDefinition" 
					p:attributeName="sponsor.sponsorName" />
				<bean parent="FieldDefinition" p:forceInquiry="true" 
					p:attributeName="primeSponsor.sponsorName" />
				<bean parent="FieldDefinition" 
					p:attributeName="principalInvestigator.fullName" />
				<bean parent="FieldDefinition"
					p:attributeName="requestedStartDateInitial" />
				<bean parent="FieldDefinition"
					p:attributeName="requestedStartDateTotal" />
				<bean parent="FieldDefinition"
					p:attributeName="requestedEndDateInitial" />
				<bean parent="FieldDefinition"
					p:attributeName="requestedEndDateTotal" />
					<bean parent="FieldDefinition"
					p:attributeName="totalDirectCostInitial" />
				<bean parent="FieldDefinition"
					p:attributeName="totalDirectCostTotal" />
				<bean parent="FieldDefinition"
					p:attributeName="totalIndirectCostInitial" />
				<bean parent="FieldDefinition"
					p:attributeName="totalIndirectCostTotal" />
			</list>
		</property>
	</bean>
</beans>
