<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
	<!-- UH KC-326 --> 
    <!-- KC-530 Lookup screens are too difficult for users, make searches easier by implementing search engine  -->
    <bean id="Organization" parent="Organization-parentBean">
         <property name="attributes">
			<list merge="true">
				<ref bean="Organization-organizationSearchInput" />
			</list>
		</property>  
    </bean>
    
    <bean id="Organization-organizationSearchInput" parent="Organization-organizationSearchInput-parentBean" />

    <bean id="Organization-organizationSearchInput-parentBean" abstract="true" parent="AttributeDefinition">
      <property name="name" value="organizationSearchInput" />

      <property name="forceUppercase" value="false" />
      <property name="label" value="Performance Site Search (Address)" />
      <property name="shortLabel" value="Performance Site Search" />
      <property name="maxLength" value="200" />
      <property name="validationPattern" >
        <bean parent="AnyCharacterValidationPattern"
              p:allowWhitespace="true" />
      </property>
      <property name="control" >
        <bean parent="TextareaControlDefinition"
              p:rows="5"
              p:cols="40" />
      </property>
      <property name="controlField">
        <bean p:size="40" parent="Uif-TextControl"/>
      </property>
      <property name="summary" value="Performance Site Search" />
      <property name="description" value="Organization SearchInput Data to be sent to solr." />
    </bean>
    
    
	<bean id="Organization-lookupDefinition" parent="Organization-lookupDefinition-parentBean">
		<property name="lookupableID" value="uhOrganizationLookupable"/>
		<property name="lookupFields">
      		<list>
      			<bean p:attributeName="organizationSearchInput" parent="FieldDefinition"/>
      		</list>
      	</property>
	</bean>

    <bean id="Organization-LookupView" parent="Organization-LookupView-parentBean">
        <property name="viewHelperService" value="#{#getService('uhOrganizationLookupableKRAD')}"/>
        <property name="headerText" value="Organization Lookup"/>
        <!-- KC-1283 For Primary Performance Site, searches can only be done using physical address. -->
        <property name="defaultSortAttributeNames">
            <list>
                <value></value>
            </list>
        </property><!-- KC-1283 END -->
        <property name="criteriaFields">
            <list>
                <bean p:propertyName="organizationSearchInput" parent="Uif-LookupCriteriaInputField">
                    <!-- KC-1127 If a blank SOLR search is executed, the system returns a STE -->
                    <property name="required" value="true" />
                    <!-- KC-1127 END -->
                </bean>
            </list>
        </property>
    </bean>


</beans>